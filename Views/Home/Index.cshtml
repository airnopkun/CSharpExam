@{
    ViewData["Title"] = "Home";
}
@model User

<div id="registration-form" class="col-4">
    <div id="registration-header">
        <h1>Registration</h1>
        <a href="/login">Log In</a>
    </div>
    <form asp-action="Register" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName">
        </div><br>
        <div class="form-group">
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName">
        </div><br>
        <div class="form-group">
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
        </div><br>
        <div class="form-group">
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password">
        </div><br>
        <div class="form-group">
            <span asp-validation-for="Confirm"></span><br>
            <label asp-for="Confirm"></label>
            <input class="form-control" asp-for="Confirm">
        </div><br>
        <button type='submit' class="btn btn-primary">Register</button>
    </form>
</div>
